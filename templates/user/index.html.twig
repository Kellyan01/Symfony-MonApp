{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    {% if toto is defined %}
    <ul>
        {% for element in toto %}
            <li>{{ element.nameUser }} {{ element.firstnameUser }}</li>
            <a href="{{ path('app_user_email', {email:element.emailUser}) }}" >Voir Profil</a>
        {% else %}
            <li>Aucun Utilisateur</li>
        {% endfor %}
        </ul>
    {% endif %}

    {% if objectUser is defined %}
        <h2>{{ objectUser.nameUser }} {{ objectUser.firstnameUser }}</h2>
        <p>{{ objectUser.emailUser }}</p>
        <p>{{ objectUser.createdAt | date('d-m-y') }}</p>
    {% endif %}
</div>
{% endblock %}
